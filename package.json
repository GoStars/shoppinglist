{
  "name": "shoppinglist",
  "version": "1.0.0",
  "description": "Shopping list built with the MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "GoStars",
  "license": "Apache-2.0",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.16"
  },
  "engines": {
    "node": "10.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GoStars/shoppinglist.git"
  },
  "keywords": [
    "Shopping",
    "List",
    "MERN"
  ],
  "bugs": {
    "url": "https://github.com/GoStars/shoppinglist/issues"
  },
  "homepage": "https://github.com/GoStars/shoppinglist#readme"
}
